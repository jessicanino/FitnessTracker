<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FAQs">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/qa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Frequently Asked Questions/Answers"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="How is my fitness tracker connected to the app ?"
        android:textColor="@color/black"
        android:layout_below="@id/qa"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="To access your fitness activity on the app, you need to enable bluetooth and choose the fitness tracker device by accessing the bluetooth button on the dashboard page."
        android:layout_below="@id/question"
        android:textColor="@color/black"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="How are calories burned calculated ?"
        android:textColor="@color/black"
        android:layout_below="@id/answer"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Calories burned are calculated by multiplying the number of calories you burn per mile and then multiplying that number with distance traveled. The number of calories burned per mile is calculated by multiplying your weight by a factor of 0.57 ."
        android:layout_below="@id/question1"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="How is distance traveled calculated ?"
        android:layout_below= "@id/answer1"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_below= "@id/question2"
        android:text="Distanced traveled is estimated by multiplying the number of steps walked by the individuals stride which is determined by their height. "
        android:textColor="@color/black"
        android:textSize="20sp"
        />

</LinearLayout>
    </ScrollView>
    </RelativeLayout>