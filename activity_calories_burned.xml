<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaloriesBurned">

    <TextView
        android:id="@+id/caloriesBurnedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Calories Burned"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/caloriesBurnedImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/caloriesBurnedText"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_burningcalories" />

    <TextView
        android:id="@+id/cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:textSize="30dp"
        android:layout_below="@id/caloriesBurnedImage"
        android:textStyle="bold" />



    <com.jjoe64.graphview.GraphView
        android:id="@+id/caloriesBurnedGraph"
        android:layout_width="match_parent"
        android:layout_height="300dip"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"/>

</RelativeLayout>